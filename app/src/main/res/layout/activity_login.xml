<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray09">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="38dp"
        android:background="@color/white"
        app:riv_border_width="0dip"
        app:riv_corner_radius="30dip"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        android:src="@drawable/group2123"
         />
    <TextView
        android:id="@+id/app_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/riv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:text="爱驴维护系统"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@+id/user_name"
        app:layout_constraintLeft_toLeftOf="@+id/user_name"
        app:layout_constraintBottom_toBottomOf="@+id/user_name"
        app:srcCompat="@drawable/user_name"
        />
    <EditText
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="输入你的账号"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingLeft="60dp"
        android:textColor="@color/black80"
        android:textColorHint="@color/black20"
        android:layout_marginTop="52dp"
        app:layout_constraintLeft_toLeftOf="@+id/rtv_login"
        app:layout_constraintRight_toRightOf="@+id/rtv_login"
        app:layout_constraintTop_toBottomOf="@+id/app_name" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@+id/password"
        app:layout_constraintLeft_toLeftOf="@+id/password"
        app:layout_constraintBottom_toBottomOf="@+id/password"
        app:srcCompat="@drawable/password"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="@+id/rtv_login"
        app:layout_constraintRight_toRightOf="@+id/rtv_login"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        android:paddingLeft="60dp"
        android:hint="输入你的密码"
        android:inputType="textPassword"
        android:textColorHint="@color/black20"
        android:textColor="@color/black80"
        />

    <com.guuguo.android.lib.widget.roundview.RoundTextView
        android:id="@+id/rtv_login"
        android:layout_width="310dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginBottom="65dp"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rv_backgroundColor="@color/gray60"
        android:onClick="onLoginClick"
        app:rv_backgroundPressColor="@color/colorPrimaryDark"
        app:rv_cornerRadius="5dp" />
</android.support.constraint.ConstraintLayout>
