<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/triangle_grey" />

    <TextView
        android:id="@+id/all_car"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="0dp"
        android:background="@color/filter_popup"
        android:gravity="center"
        android:text="全部车辆"
        android:onClick="allCarFilter"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/white" />

    <TextView
        android:id="@+id/normal_car"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="0dp"
        android:background="@color/filter_popup"
        android:gravity="center"
        android:text="正常车辆"
        android:onClick="normalCarFilter"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/white" />

    <TextView
        android:id="@+id/low_power_car"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="0dp"
        android:background="@color/filter_popup"
        android:gravity="center"
        android:text="低电车辆"
        android:onClick="lowPowerCarFilter"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/white" />

    <TextView
        android:id="@+id/error_car"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="0dp"
        android:background="@color/filter_popup"
        android:gravity="center"
        android:text="故障车辆"
        android:onClick="errorCarFilter"
        android:textColor="@color/white"
        android:textSize="18dp" />
</LinearLayout>